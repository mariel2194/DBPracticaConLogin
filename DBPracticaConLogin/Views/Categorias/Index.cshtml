@model IEnumerable<DBPracticaConLoginSearchYList.Categoria>

@{
    ViewBag.Title = "Index";
}


<div class="custom">
    <h2>Registro de Categorias</h2>
    <br />

    <div class="btn-text-left">
        <button type="button" class="btn btn-primary">
            @Html.ActionLink("Create New", "Create")
        </button>
    </div>
    <br />
    <div>
        <form class="d-flex">
            <input class="form-control me-sm-2" type="text" placeholder="Search" id="Criterio" name="Criterio">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit" id="buscar">Search</button>
        </form>
    </div>



    <br />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CategoriaID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CategoriaID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CategoriaID })
                </td>
            </tr>
        }

    </table>
 </div>