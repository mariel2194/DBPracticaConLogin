@if (ViewContext.RouteData.Values["Controller"].ToString() == "AccountController")
{
    <input type="text" class="form-control" placeholder="Search" style="color:aquamarine;">
}
@using Microsoft.AspNet.Identity


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Facturacion de Productos</title>

    @Styles.Render("~/Content/style.css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />


</head>
<body>

    <div class="navbar-fixed sidebar-fixed" id="body">

        <div class="wrapper" id="wrapper" runat="server">

            <aside class="left-sidebar sidebar-dark" id="left-sidebar">
                <div id="sidebar" class="sidebar sidebar-with-footer">

                    <div class="app-brand">
                        <a href="~/Home">

                            <span class="brand-name">MENU</span>
                        </a>
                    </div>


                    <div class="sidebar-left" data-simplebar style="height:100%;">
                        <!-- sidebar menu -->
                        <ul class="nav sidebar-inner" id="sidebar-menu">
                            <li>
                                <a class="sidenav-item-link" href="~/Productos">
                                    <i class="bi bi-cart4"></i>
                                    <span class="nav-text">Productos</span>
                                </a>
                            </li>
                            <li>
                                <a class="sidenav-item-link" href="~/Clientes">
                                    <i class="bi bi-person-lines-fill"></i>
                                    <span class="nav-text">Clientes</span>
                                </a>
                            </li>
                            <li>
                                <a class="sidenav-item-link" href="~/MetodoPagoes">
                                    <i class="bi bi-cash-coin"></i>
                                    <span class="nav-text">Metodos De Pago</span>
                                </a>
                            </li>
                            <li>
                                <a class="sidenav-item-link" href="~/Vendedores">
                                    <i class="bi bi-people-fill"></i>
                                    <span class="nav-text">Vendedores</span>
                                </a>
                            </li>
                            <li>
                                <a class="sidenav-item-link" href="~/Facturas">
                                    <i class="bi bi-receipt"></i>
                                    <span class="nav-text">Reporte Facturas</span>
                                </a>
                            </li>
                            <li>
                                <a class="sidenav-item-link" href="~/Categorias">
                                    <i class="bi bi-basket2-fill"></i>
                                    <span class="nav-text">Categoria de Productos</span>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="sidebar-footer">
                        <div class="sidebar-footer-content">

                        </div>
                    </div>
                </div>
            </aside>

        </div>


        <!-- ====================================
        ——— PAGE WRAPPER
        ===================================== -->
        <div class="page-wrapper">

            <!-- Header -->
            <header class="main-header" id="header">
                <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">
                            <span class="page-title" id="sidebar-toggler" style="margin-left:25px;">
                                <i class="bi bi-boxes radio">

                                </i>FACTURACION DE ARTICULOS |
                            </span>
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarColor01">

                            <div class="navbar-right">
                                <ul class="navbar-nav me-auto nav nav-pills">

                                    <li class="nav-item dropdown" style="margin-right:150px;">
                                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Configuracion</a>
                                        <div class="dropdown-menu" style="margin-right: 550px; padding: 20px; width: 300px;">

                                            <span  class="dropdown-item">@Html.ActionLink("Usuario " + User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</span>


                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Cerrar Sesion</a>
                                        </div>
                                    </li>
                                </ul>

                            </div>
                        </div>
                    </div>
                </nav>
            </header>

        </div>







        <!-- Footer -->
        <footer class="footer mt-auto" id="pio" style="text-align:center;">
            <div class="copyright">
                &copy; <span id="copy-year"></span> <a class="text-primary">Sistema de Facturacion de Prueba</a>

            </div>
            <script>
                var d = new Date();
                var year = d.getFullYear();
                document.getElementById("copy-year").innerHTML = year;
            </script>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
</body>
<script src="~/Content/js/custom.js"></script>
<script src="~/Content/plugins/jquery/jquery.min.js"></script>
<script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/Content/plugins/simplebar/simplebar.min.js"></script>
<script src="~/Content/js/mono.js"></script>
<script src="~/Content/js/chart.js"></script>
<script src="~/Content/js/map.js"></script>








@Html.Partial("_LoginPartial")


@RenderSection("scripts", required: false)
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")


</html>
