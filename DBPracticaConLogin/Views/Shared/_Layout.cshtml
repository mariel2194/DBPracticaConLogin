{
<input type="text" class="form-control" placeholder="Search" style="color:aquamarine;">
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Facturacion de Productos</title>



    @Styles.Render("~/Content/style.css")
    @Scripts.Render("~/bundles/modernizr")


    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Karla:400,700|Roboto" rel="stylesheet">
    <link href="~/Content/plugins/material/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/simplebar/simplebar.css" rel="stylesheet" />


    <!-- PLUGINS CSS STYLE -->
    <link href="plugins/nprogress/nprogress.css" rel="stylesheet" />
    <link href="plugins/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link href="plugins/toaster/toastr.min.css" rel="stylesheet" />
    <!-- MONO CSS -->
    <link id="main-css-href" rel="stylesheet" href="css/style.css" />

    <!-- FAVICON -->
    <link href="~/Content/images/" rel="shortcut icon" />

    <script src="~/Content/plugins/nprogress/nprogress.js"></script>
    <link href="~/Content/fontawesome/css/all.min.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/fontawesome/css/fontawesome.min.css" rel="stylesheet">
    <link href="~/Content/fontawesome/webfont/fa-solid-900.ttf" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">


</head>
<body>
    <div class="navbar-fixed sidebar-fixed" id="body">

        <div class="wrapper" id="wrapper" runat="server">

            <aside class="left-sidebar sidebar-dark" id="left-sidebar">
                <div id="sidebar" class="sidebar sidebar-with-footer">

                    <div class="app-brand">
                        <a href="~/Home">

                            <span class="brand-name">MENU</span>
                        </a>
                    </div>


                    <div class="sidebar-left" data-simplebar style="height:100%;">
                        <!-- sidebar menu -->
                        <ul class="nav sidebar-inner" id="sidebar-menu">
                            <li>
                                <a class="sidenav-item-link" href="~/Productos">
                                    <i class="bi bi-cart4"></i>
                                    <span class="nav-text">Productos</span>
                                </a>
                            </li>
                            <li>
                                <a class="sidenav-item-link" href="~/Clientes">
                                    <i class="bi bi-person-lines-fill"></i>
                                    <span class="nav-text">Clientes</span>
                                </a>
                            </li>
                            <li>
                                <a class="sidenav-item-link" href="~/MetodoPagoes">
                                    <i class="bi bi-cash-coin"></i>
                                    <span class="nav-text">Metodos De Pago</span>
                                </a>
                            </li>
                            <li>
                                <a class="sidenav-item-link" href="~/Vendedores">
                                    <i class="bi bi-people-fill"></i>
                                    <span class="nav-text">Vendedores</span>
                                </a>
                            </li>
                            <li>
                                <a class="sidenav-item-link" href="~/Facturas">
                                    <i class="bi bi-receipt"></i>
                                    <span class="nav-text">Reporte Facturas</span>
                                </a>
                            </li>
                            <li>
                                <a class="sidenav-item-link" href="~/Categorias">
                                    <i class="bi bi-basket2-fill"></i>
                                    <span class="nav-text">Categoria de Productos</span>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="sidebar-footer">
                        <div class="sidebar-footer-content">
                            <ul class="d-flex">

                                <a href="#" data-toggle="tooltip" title="No chat messages">
                                    <i class="mdi mdi-chat-processing"></i>
                                </a>

                            </ul>
                        </div>
                    </div>
                </div>
            </aside>

        </div>


        <!-- ====================================
        ——— PAGE WRAPPER
        ===================================== -->
        <div class="page-wrapper">

            <!-- Header -->
            <header class="main-header" id="header">
                <nav class="navbar navbar-expand-lg navbar-light" id="navbar">
                    <!-- Sidebar toggle button -->


                    <span class="page-title" id="sidebar-toggler" style="margin-left:25px;">
                        <i class="bi bi-boxes radio">

                        </i> FACTURACION DE ARTICULOS | REGISTRY
                    </span>
                    <div class="navbar-right">
                        @Html.Partial("_LoginPartial")
                    </div>


                    <ul class="nav navbar-nav">
                    </ul>

                </nav>
                
            </header>

        </div>




        <div class="container body-content">
            @RenderBody()
        </div>

        @*@Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")*@
        @RenderSection("scripts", required: false)





        <!-- Footer -->
        <footer class="footer mt-auto" id="pio" style="text-align:center;">
            <div class="copyright">
                &copy; <span id="copy-year"></span> <a class="text-primary">Sistema de Facturacion de Prueba</a>

            </div>
            <script>
                var d = new Date();
                var year = d.getFullYear();
                document.getElementById("copy-year").innerHTML = year;
            </script>
        </footer>

    </div>
</body>
<script src="~/Content/js/custom.js"></script>
<script src="~/Content/plugins/jquery/jquery.min.js"></script>
<script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/Content/plugins/simplebar/simplebar.min.js"></script>
<script src="~/Content/js/mono.js"></script>
<script src="~/Content/js/chart.js"></script>
<script src="~/Content/js/map.js"></script>








